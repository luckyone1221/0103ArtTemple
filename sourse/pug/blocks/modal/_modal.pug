mixin modal(data)
	//  start modals
	div(id="modal-nft"  style="display: none")
		+b.modal-win
			+form-wrap
				+e.main-title.text-center
					h2 Select platform to buy NFT
				+e.row.row.gy-4
					if data.lang === 'en'
						+modalPlatform(1, 'Binance', "https://www.binance.com/en", 'BUY NOW')
						+modalPlatform(2, 'OpenSea', "https://opensea.io/arTemple", 'BUY NOW')
						+modalPlatform(3, 'Nifty Gateway', "https://niftygateway.com/", 'BUY NOW')
					if data.lang === 'ua'
						+modalPlatform(1, 'Binance', "https://www.binance.com/uk-UA", 'КУПИТИ')
						+modalPlatform(2, 'OpenSea', "https://opensea.io/arTemple", 'КУПИТИ')
						+modalPlatform(3, 'Nifty Gateway', "https://niftygateway.com/", 'КУПИТИ')
	div(id="modal-donate"  style="display: none" )
		+b.modal-win
			+form-wrap
				+e.main-title.text-center
					h2 Select platform to buy NFT
				+e.row.row.gy-4
					if data.lang === 'en'
						+modalPlatform(4, 'Come back alive', "https://www.comebackalive.in.ua/donate", 'DONATE', 'The goal is to provide the Ukrainian army with the necessary equipment')
						+modalPlatform(5, 'Your support', "http://tvoya-opora.org/donate", 'DONATE', 'The goal is to help victims of hostilities in Ukraine')
						//-+modalPlatform(6, 'Donation', "https://bank.gov.ua/en/news/all/natsionalniy-bank-vidkriv-rahunok-dlya-gumanitarnoyi-dopomogi-ukrayintsyam-postrajdalim-vid-rosiyskoyi-agresiyi", 'DONATE', 'The goal is to provide the Ukrainian army with the necessary equipment')
						+modalPlatform(7, 'National Bank of Ukraine', "https://bank.gov.ua/en/news/all/natsionalniy-bank-vidkriv-rahunok-dlya-gumanitarnoyi-dopomogi-ukrayintsyam-postrajdalim-vid-rosiyskoyi-agresiyi", 'DONATE', 'The goal is to provide the Ukrainian army with the necessary equipment')
					if data.lang === 'ua'
						+modalPlatform(4, 'Повернися живим', "https://www.comebackalive.in.ua/uk/donate", 'Пожертвувати', 'Мета - забезпечити українську армію необхідною технікою.')
						+modalPlatform(5, 'Твоя опора', "http://tvoya-opora.org/donate", 'Пожертвувати', 'Мета – допомогти постраждалим від військових дій в Україні.')
						//-+modalPlatform(6, 'Пожертва', "https://bank.gov.ua/en/news/all/natsionalniy-bank-vidkriv-rahunok-dlya-gumanitarnoyi-dopomogi-ukrayintsyam-postrajdalim-vid-rosiyskoyi-agresiyi", 'Пожертвувати', 'Мета - забезпечити українську армію всім необхідним')
						+modalPlatform(7, 'Національний банк України', "https://bank.gov.ua/ua/news/all/natsionalniy-bank-vidkriv-rahunok-dlya-gumanitarnoyi-dopomogi-ukrayintsyam-postrajdalim-vid-rosiyskoyi-agresiyi", 'Пожертвувати', 'Мета - забезпечити українську армію всім необхідним')
	// #modal-call
	
	// end modals

mixin modalPlatform(imgNum, title, href="#", btnTxt, descr)
	+e.col.col-sm-4
		+e.item.text-center(href=href target="_blank")
			+e.box
				img(loading="lazy" src=`img/@2x/modalPlatform-${imgNum}.png` alt="")
			+e.title-box
				+e.title=title
				if descr
					+e.descr=descr
			+e.btn=btnTxt