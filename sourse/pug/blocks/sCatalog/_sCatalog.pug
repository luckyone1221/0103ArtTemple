mixin sCatalogItem(data)
	.swiper-slide
		+e.item.text-center(href='#' target="_blank")
			+e.box
				img(loading="lazy" src=`img/@2x/sCatalog-${data.imgNum}.jpg` alt="")
			+e.name=data.name
			//-+e.descr.t-box-js
				+e.txt.t-content-js(class=`${data.txtContentClasses || ''}`)
					span=data.descr
				+e.t-btn.t-btn-js(class=`${data.txtContentClasses || 'invisible'}`)
					span read more
					span hide