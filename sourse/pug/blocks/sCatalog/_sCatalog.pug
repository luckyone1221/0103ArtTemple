mixin sCatalog(data)
	// start sCatalog
	+b.SECTION.sCatalog--js.section#sCatalog&attributes(attributes)
		.container
			+b.section-title
				if data.lang === 'en'
					h2 Our works
					//-p If you are not indifferent to the fate of the world and have the desire and opportunity to help Ukraine and Ukrainians in preserving their lives and country, join our charitable mission to support the defense of a small but brave country.
				if data.lang === 'ua'
					h2 Наші роботи
					//-p Якщо вам небайдужа доля світу, ви маєте бажання та можливість допомогти Україні та українцям зберегти наші життя та країну, долучайтесь до нашої благодійної місії – підтримати захист маленької, але хороброї країни.
			+e.slider-wrap
				.d-none.d-lg-block
					+arrow()
				.swiper.sCatalog-slider-js
					.swiper-wrapper
						//-stab
							+sCatalogItem({
								imgNum: 1,
								name: 'Birds',
